echo $PROJECT_PATH

FRONTEND_REACT_JS_PATH="$PROJECT_PATH/frontend-react-js"
docker build \
--build-arg REACT_APP_BACKEND_URL="https://cruddur-alb-337798396.us-west-1.elb.amazonaws.com:4567" \
